<h1>Edit Keg</h1>


<%= form_with model: @keg do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name %>
    <br>
    <%= f.label :beer_type %>
    <%= f.text_field :beer_type %>
    <br>
    <%= f.submit %>
<% end %>

<%= link_to "Delete Keg", keg_path(@keg), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
